<table class="profile" summary="Profile Information">
  <tr>
   	<td class = "main">  	
		<h1>
		<%= gravatar_for @user %>
		<%= @user.name %>
		</h1>
   	</td>
    <% if @user.envios.any? %> 
        <table class ="envios" summary="User envios">
          <%= render @envios %> 
        </table>
        <%= will_paginate @envios %>
    <% end %> 
   	<td class="sidebar round">
   		<strong>Name </strong> <%=@user.name %> <br />
   		<strong>URL</strong> <%=link_to user_path(@user), 
   								user_path(@user) %>
      <strong>Envios </strong> <%= @user.envios.count %>
   	</td>
  </tr>
</table>	